<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="95dp"
    android:background="#9fb3b3">

    <Button
        android:id="@+id/TrainLutemonBtn"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginBottom="44dp"
        android:text="Train Lutemons"
        app:layout_constraintBottom_toTopOf="@+id/BattleLutemonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ListLutemonBtn"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginBottom="44dp"
        android:text="List Lutemons"
        app:layout_constraintBottom_toTopOf="@+id/TrainLutemonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BattleLutemonBtn"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginBottom="176dp"
        android:text="Battle!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/AddLutemonBtn"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginBottom="44dp"
        android:text="Add new Lutemon"
        app:layout_constraintBottom_toTopOf="@+id/ListLutemonBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>